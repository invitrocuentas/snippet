{
	"JS-MOUNT-SLIDER": {
		"prefix": "js-mount-slider",
		"body": [
			"if(document.querySelector('$1')){",
			"	new Splide('$1', {",
			"		type: 'splide',",
			"		autoplay: true,",
			"		interval: 5000,",
			"		arrows: false,",
			"		pagination: false,",
			"		perPage: $2,",
			"		perMove: $3,",
			"		breakpoints: {",
			"		}",
			"	}).mount();",
			"}"
		],
		"description": "Snippet para inicializar y montar un slider de SplideJS"
	}
}